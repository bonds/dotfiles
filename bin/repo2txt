#!/usr/bin/env fish

if not set gitroot (git rev-parse --show-toplevel)
    echo "not a git repo"
    exit 1
end

set pwd (pwd)

if not test "$gitroot" = "$pwd"
    echo "not at git root"
    exit 2
end

set output "$pwd/../thing.txt"
echo "" >$output

echo "\$ cd $pwd" >>$output
echo >>$output

echo "\$ git remote -v" >>$output
git remote -v >>$output
echo >>$output

echo "\$ ls -R" >>$output
echo >>$output
ls -R >>$output
echo >>$output

for file in (find . -type f -iname "*.md" -o -iname "*.py" -o -iname "*.txt")
    echo "\$ cat $file" >>$output
    echo >>$output
    cat "$file" >>$output
    echo >>$output
end
